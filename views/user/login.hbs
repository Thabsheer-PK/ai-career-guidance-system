 <section class="d-flex align-items-center justify-content-center login-body">
    <div class="col-md-6 col-lg-5">
      <div class="card bg-dark text-white border-0">
        <div class="card-header bg-secondary text-white text-center">
          <h3 class="mb-0"><i class="fas fa-lock"></i> Login</h3>
        </div>
        <div class="card-body p-5">
          <form action="/login" method="post" id="userLoginForm" novalidate>
            <div class="mb-4">
              <label for="InputEmail1" class="form-label">Email Address</label>
              <input type="email" class="form-control bg-dark text-white" id="InputEmail1" name="Email" required
                placeholder="Enter your email">
              <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>
            <div class="mb-4">
              <label for="InputMobile" class="form-label">Mobile Number</label>
              <input type="tel" class="form-control bg-dark text-white" id="InputMobile" name="Mobile" pattern="\d{10}" required
                placeholder="10-digit number">
              <div class="invalid-feedback">Please enter a valid 10-digit mobile number.</div>
            </div>
            <div class="mb-4">
              <label for="InputPassword1" class="form-label">Password</label>
              <div class="input-group">
                <input type="password" class="form-control bg-dark text-white" id="InputPassword1" name="Password" required
                  placeholder="Enter your password">
                
              </div>
            </div>
            <p class="text-danger text-center small form-error"></p>
            <div class="d-grid mt-5">
              <button type="submit" class="btn btn-primary">
                Login <i class="fas fa-arrow-right ms-2"></i>
              </button>
            </div>
            <div class="text-center mt-4">
              <a href="/signup" class="text-info text-decoration-none">Don't have an account?<span class="text-white"> Sign up</span></a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>